<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl001"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/a001">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/l_Lay"
        android:background="#5e3b8ebb">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="序号"
            android:id="@+id/tw_id"
            android:layout_weight="0.7"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="报警"
            android:id="@+id/tw_con"
            android:layout_weight="2"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="时间"
            android:id="@+id/tw_time"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="日期"
            android:id="@+id/tw_date"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />
    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:id="@+id/lv_warn"
        android:layout_centerHorizontal="true"
        android:transcriptMode="alwaysScroll"
        android:layout_below="@+id/l_Lay"
        android:divider="#00000000"
        android:background="#5e3b8ebb"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/et_time1"
        android:focusable="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ae51bcb3"
        android:hint="选择日期"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:text="实时"
        android:id="@+id/bt_now1"
        android:background="#2eb4a2"
        android:textSize="20dp"
        android:layout_alignTop="@+id/et_time1"
        android:layout_toEndOf="@+id/et_time1"
        android:layout_marginStart="90dp" />

</RelativeLayout>